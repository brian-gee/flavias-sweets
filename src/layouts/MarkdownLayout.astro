---
import Layout from "./Layout.astro";

const { title } = Astro.props;
---

<Layout title="Blog">
  <section class="max-w-4xl px-4 py-16 mx-auto sm:px-6 lg:px-8 lg:py-20">
    <h1
      class="text-4xl font-bold tracking-tighter font-heading md:text-5xl leading-tighter"
    >
      {title}
    </h1>
    <div
      class="max-w-4xl mx-auto mt-8 prose prose-lg dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg"
    >
      <slot />
    </div>
  </section>
</Layout>
