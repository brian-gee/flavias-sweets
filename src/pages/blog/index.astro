---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort((a, b) => {
  const dateA = a.data.pubDate ? new Date(a.data.pubDate).valueOf() : 0;
  const dateB = b.data.pubDate ? new Date(b.data.pubDate).valueOf() : 0;
  return dateA - dateB;
});
---

<Layout title="Blog">
  <section>
    <h1 class="pb-10 text-4xl text-center sm:pb-20">Our Blog</h1>
    <ul class="max-w-4xl p-10 mx-auto space-y-4">
      {
        posts.map((post) => (
          <li class="flex flex-col sm:flex-row justify-between border-t-[1px] pt-2">
            <a
              href={`/blog/${post.slug}/`}
              class="flex-grow hover:underline sm:flex-grow-0"
            >
              {post.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
