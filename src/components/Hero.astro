---
import { Icon } from 'astro-icon';
import { Image } from 'astro:assets';
import heroImage from '../assets/dount_cake.jpg';
---

<section class="mx-auto container">
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 md:px-12 lg:px-24 lg:py-24">
    <div class="flex flex-wrap items-center mx-auto">
      <div
        class="flex flex-col items-start mt-16 mb-16 text-left lg:flex-grow lg:w-1/2 lg:pl-6 xl:pl-24 xl:mt-0">
        <h1
          class="mb-8 text-4xl font-bold leading-none tracking-tighter lg:text-5xl">
          The <span class="text-pink-500">perfect</span> party sweets, every
          time.
        </h1>
        <p class="mb-2 text-base leading-relaxed text-left">
          <span class="font-bold">We bake the most memorable treats.</span> So
          you can have your cake and eat it too.
        </p>
        <div class="flex space-x-4">
          <!-- Flex container for buttons -->
          <a
            href="#about"
            class="inline-flex items-center justify-center h-10 px-6 font-medium tracking-wide rounded shadow-md bg-pink-500 text-black"
            aria-label="Learn more"
            title="Learn more">
            Learn more
          </a>
          <a
            href="#gallery"
            class="inline-flex items-center justify-center h-10 px-6 font-medium tracking-wide rounded shadow-md border-2 border-black text-black"
            aria-label="View Gallery"
            title="View gallery">
            View gallery
          </a>
        </div>
      </div>

      <div
        class="w-full hidden mt-8 lg:block lg:mt-0 lg:max-w-lg lg:w-1/2 rounded-xl lg:pl-12">
        <div class="flex justify-center">
          <div class="relative w-full max-w-lg">
            <div class="flex">
              <Image
                class="object-cover object-center mx-auto rounded-lg shadow-2xl"
                src={heroImage}
                alt="Happy kids smiling around birthday cake"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
