---
export interface Props {
  date: string;
}

const { date: dateString } = Astro.props as Props;
const date = new Date(dateString);
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
