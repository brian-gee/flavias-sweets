---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404">
  <main
    class="min-h-screen px-6 py-24 grid place-items-center sm:py-32 lg:px-8">
    <div class="text-center">
      <p class="text-base font-semibold">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-base leading-7">
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="flex items-center justify-center mt-10 gap-x-6">
        <a
          href="/"
          class="px-4 py-3 text-sm font-semibold rounded-md shadow-sm">
          Go back home
        </a>
      </div>
    </div>
  </main>
</Layout>
