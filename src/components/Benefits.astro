---
import { Icon } from 'astro-icon';

type BenefitItem = {
  title: string;
  text: string;
  icon: string;
  children?: BenefitItem[];
};

const benefitItems: BenefitItem[] = [
  {
    title: 'Customization',
    text: 'With our personalized custom design service, you can create a stunning cake that perfectly reflects your style and vision, making your event truly unforgettable.',
    icon: 'ant-design:codepen-outlined',
  },
  {
    title: 'High-quality ingredients',
    text: 'Taste the difference that our high-quality ingredients make - our cakes are moist, flavorful, and irresistibly delicious',
    icon: 'ic:round-check',
  },
  {
    title: 'Convenient delivery options',
    text: 'Relax and enjoy your event, while we take care of delivering your cake right to your doorstep, with our reliable and convenient delivery service.',
    icon: 'iconoir:delivery-truck',
  },
];
---

<section>
  <div class="container px-5 py-24 mx-auto">
    <div class="text-center mb-20">
      <h1
        class="mb-8 text-4xl font-bold leading-none tracking-tighter lg:text-5xl">
        Indulgence Redefined: The Perks of Our Cake Experience
      </h1>
      <p class="leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto">
        <span class="font-bold">We are passionate</span>
        about creating cakes that are tailored to your unique tastes and preferences.
        Whether you are looking for a classic cake or a modern creation, we work
        closely with our customers to bring their vision to life. Our cakes are made
        with the finest ingredients, giving them a taste that is simply irresistible.
        Our happy customers rave about our cakes, and we are confident that you will
        too!
      </p>
      <div class="flex mt-6 justify-center">
        <div class="w-16 h-1 rounded-full bg-pink-500 inline-flex"></div>
      </div>
    </div>
    <div
      class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6">
      {
        benefitItems.map((item) => (
          <>
            <div class="p-4 md:w-1/3 flex flex-col text-center items-center">
              <div class="w-20 h-20 inline-flex items-center justify-center rounded-full bg-pink-400 text-white mb-5 flex-shrink-0">
                <Icon name={item.icon} class="w-12" />
              </div>
              <div class="flex-grow">
                <h2 class="text-gray-900 text-lg title-font font-medium mb-3">
                  {item.title}
                </h2>
                <p class="leading-relaxed text-base">{item.text}</p>
                <!-- Commenting out links for now
                <a href="" class="mt-3 text-pink-500 inline-flex items-center">
                  Learn More
                  <svg
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    class="w-4 h-4 ml-2"
                    viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7" />
                  </svg>
                </a>
                  -->
              </div>
            </div>
          </>
        ))
      }
    </div>
  </div>
</section>
