---
import { Image } from "astro:assets";
import Facebook from "../assets/icons/Facebook.astro";
import Instagram from "../assets/icons/Instagram.astro";
import logo from "../assets/flavias-sweets-nobg.png";
---

<!-- Main navigation component -->
<header class="px-3 py-10 sm:px-6">
  <div class="flex items-center justify-between max-w-3xl mx-auto lg:max-w-6xl">
    <div>
      <a
        href="/"
        aria-label="Flavia's Sweets"
        title="Flavia's Sweets"
        class="inline-flex items-center"
      >
        <Image src={logo} alt="flaviasweets logo" class="w-12 h-12" />
        <span class="ml-2 text-3xl font-bold tracking-wide hover:text-pink-400">
          Flavia's Sweets
        </span>
      </a>
    </div>
    <div class="flex items-center space-x-4">
      <!-- Social icons component -->
      <ul class="flex text-lg font-bold space-x-4">
        <a
          target="_blank"
          href="https://www.facebook.com/Flaviasweets/"
          class="hover:text-pink-400"
        >
          <li>
            <Facebook class="w-6 h-6" />
          </li>
        </a>
        <a
          target="_blank"
          href="https://www.instagram.com/flavias_sweets/"
          class="hover:text-pink-400"
        >
          <li>
            <Instagram class="w-6 h-6" />
          </li>
        </a>
      </ul>
    </div>
  </div>
</header>
