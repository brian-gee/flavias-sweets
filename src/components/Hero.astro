---
import happyKidsBirthday from '../assets/happy-kids-birthday.jpg';
import { Icon } from 'astro-icon';

type BulletItem = {
  text: string;
  icon: string;
  children?: BulletItem[];
};

const bulletItems: BulletItem[] = [
  {
    text: 'Saves you time',
    icon: 'ic:round-check',
  },
  {
    text: 'Saves you money',
    icon: 'ic:round-check',
  },
  {
    text: 'Saves your party',
    icon: 'ic:round-check',
  },
];
---

<section>
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 md:px-12 lg:px-24 lg:py-24">
    <div class="flex flex-wrap items-center mx-auto max-w-7xl">
      <div
        class="flex flex-col items-start mt- mb-16 text-left lg:flex-grow lg:w-1/2 lg:pl-6 xl:pl-24 md:mb-0 xl:mt-0">
        <h1
          class="mb-8 text-4xl font-bold leading-none tracking-tighter lg:text-5xl">
          The <span class="text-pink-500">perfect</span> cake, every time.
        </h1>
        <p class="mb-2 text-base leading-relaxed text-left">
          <span class="font-bold">Free and Premium themes,</span> UI Kit's, templates
          and landing pages built with Tailwind CSS, HTML &amp; Next.js.
        </p>
        <p class="mb-2 text-base leading-relaxed text-left">
          <span class="font-bold">Free and Premium themes,</span> UI Kit's, templates
          and landing pages built with Tailwind CSS, HTML &amp; Next.js.
        </p>
        <div class="flex-col max-w-7xl sm:flex">
          <div class="prose prose-md">
            <ul>
              {
                bulletItems.map((item) => (
                  <li>
                    <Icon
                      name={item.icon}
                      class="inline w-6 mr-2 text-pink-500"
                    />
                    {item.text}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
      <div class="w-full mt-8 lg:mt-0 lg:max-w-lg lg:w-1/2 rounded-xl lg:pl-12">
        <div>
          <div class="relative w-full max-w-lg">
            <div
              class="absolute top-0 rounded-full bg-fuchsia-300 -left-4 w-72 h-72 mix-blend-multiply filter blur-xl opacity-70 animate-blob">
            </div>

            <div
              class="absolute rounded-full bg-pink-300 -bottom-24 right-20 w-72 h-72 mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000">
            </div>
            <div class="flex">
              <img
                class="object-cover object-center mx-auto rounded-lg shadow-2xl"
                alt="hero"
                src={happyKidsBirthday}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
